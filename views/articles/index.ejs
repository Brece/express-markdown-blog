<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <div class="c-container">
        <h1 class="c-container__title">Blog Articles</h1>
        <a href="/articles/new" class="c-btn c-btn--success">New Article</a>

        <div class="c-container__cards">
            <% articles.forEach(article => { %>
                <%- include('_card_item', { article: article }) %> 
            <% }) %>
        </div>
    </div>
</body>
</html>